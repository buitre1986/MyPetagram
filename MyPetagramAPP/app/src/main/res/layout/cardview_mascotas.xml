<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMascota"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation= "vertical"
        android:padding="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/imgMascota"
            android:src="@drawable/perro11"
            android:scaleType="centerCrop"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hueso_bla"
            android:background="@color/white"
            android:layout_below="@id/imgMascota"
            android:id="@+id/btnlike"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvNombre"
            android:layout_below="@id/imgMascota"
            android:layout_toEndOf="@id/btnlike"
            android:paddingLeft="20dp"
            android:text="Manchita"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cantLike"
            android:layout_below="@id/imgMascota"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="55dp"
            android:text="5"
            android:textSize="35sp"
            android:textAlignment="center" />

        <ImageButton
            android:id="@+id/Likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgMascota"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="3dp"
            android:background="@color/white"
            android:src="@drawable/hueso_ama" />

    </RelativeLayout>


</android.support.v7.widget.CardView>